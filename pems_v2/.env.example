# PEMS v2 Configuration Template
# Copy this file to .env and fill in your values

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ORG=smart_home
INFLUXDB_BUCKET_HISTORICAL=smart_home
INFLUXDB_BUCKET_PREDICTIONS=predictions
INFLUXDB_BUCKET_OPTIMIZATION=optimization

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=pems_v2

# PV Prediction Settings
PV_MODEL_PATH=models/pv_predictor.pkl
PV_UPDATE_INTERVAL=3600
PV_HORIZON_HOURS=48
PV_CONFIDENCE_LEVELS=[0.1,0.5,0.9]

# Thermal Settings
THERMAL_DEFAULT_SETPOINT_DAY=21.0
THERMAL_DEFAULT_SETPOINT_NIGHT=19.0
THERMAL_COMFORT_BAND=0.5

# Optimization Settings
OPT_HORIZON_HOURS=48
OPT_CONTROL_HOURS=24
OPT_TIME_STEP_MINUTES=60
OPT_SOLVER=APOPT
OPT_MAX_SOLVE_TIME=30
OPT_COST_WEIGHT=1.0
OPT_SELF_CONSUMPTION_WEIGHT=0.3
OPT_PEAK_SHAVING_WEIGHT=0.1
OPT_COMFORT_WEIGHT=0.5

# Battery Settings
BATTERY_CAPACITY_KWH=10.0
BATTERY_MAX_POWER_KW=5.0
BATTERY_EFFICIENCY=0.95
BATTERY_MIN_SOC=0.1
BATTERY_MAX_SOC=0.9

# EV Settings
EV_MAX_POWER_KW=11.0
EV_BATTERY_CAPACITY_KWH=60.0
EV_DEFAULT_TARGET_SOC=0.8
EV_DEPARTURE_TIME=07:00

# PEMS Feature Flags
PEMS_SIMULATION_MODE=false
PEMS_ADVISORY_MODE=false
PEMS_OPTIMIZATION_INTERVAL=3600
PEMS_CONTROL_INTERVAL=300