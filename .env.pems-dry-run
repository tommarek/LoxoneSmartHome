# PEMS v2 Dry Run Service Configuration
# Copy this file to .env and customize as needed

# Service Configuration
PEMS_CYCLE_INTERVAL_MINUTES=15
PEMS_HORIZON_HOURS=6
PEMS_MAX_SOLVE_TIME=30
PEMS_DATA_RETENTION_HOURS=168

# Data Paths (container paths)
PEMS_DATA_DIR=/data/pems_dry_run
PEMS_LOG_DIR=/logs/pems_dry_run

# Optimization Settings
PEMS_MIP_GAP=0.05
PEMS_SOLVER_TIMEOUT=30

# System Resource Limits
PEMS_MEMORY_LIMIT=512M
PEMS_CPU_LIMIT=1.0

# Monitoring
PEMS_HEALTH_CHECK_INTERVAL=5m
PEMS_METRICS_UPDATE_INTERVAL=600

# Data Collection
PEMS_ENABLE_DATA_COLLECTION=true
PEMS_ENABLE_MQTT_LOGGING=true
PEMS_ENABLE_STATE_LOGGING=true

# Optional Services
ENABLE_GRAFANA_DASHBOARD=false
ENABLE_SEQ_LOGGING=false

# Grafana Configuration (if enabled)
GF_SECURITY_ADMIN_PASSWORD=admin
GF_INSTALL_PLUGINS=grafana-simple-json-datasource

# Development Settings
PEMS_DEBUG_MODE=false
PEMS_VERBOSE_LOGGING=false